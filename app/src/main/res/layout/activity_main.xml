<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:id="@+id/kura">


    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:orientation="horizontal" >


    <EditText
        android:hint="deger ekle:"
        android:id="@+id/deger_ekle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        />

    <Button
        android:background="@drawable/custom_button"
        android:text="Ekle"
        android:id="@+id/add_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <Button
            android:background="@drawable/kazanan_selector"
            android:layout_marginBottom="25dp"
            android:text="Listeye Eklenenler"
            android:id="@+id/listele"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            />

        <Button
            android:background="@drawable/kazanan_selector"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Kazanan"
            android:id="@+id/kazanan_btn" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="120dp"
        android:textSize="45sp"
        android:text=""
        android:id="@+id/ekran_cıktı"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="500dp" />



</LinearLayout>